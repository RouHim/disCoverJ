              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="25.0">
            <children>
                <ImageView fx:id="imgCover" fitHeight="240.0" fitWidth="240.0" preserveRatio="true"
                           pickOnBounds="true" styleClass="material-shadow" AnchorPane.bottomAnchor="0.0"
                           AnchorPane.leftAnchor="0.0"
                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="75.0" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
    </children>
