        <TextFlow fx:id="txtCoverInfo" maxHeight="25.0" minHeight="25.0" prefHeight="25.0" textAlignment="CENTER"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0"/>
