<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootLayout" maxHeight="400.0" maxWidth="400.0" minHeight="400.0"
            minWidth="400.0"
            prefHeight="400.0" prefWidth="400.0" stylesheets="@../css/style.css"
            xmlns="http://javafx.com/javafx/8.0.60"
            fx:controller="de.itlobby.discoverj.ui.viewcontroller.OpenFileViewController">
    <children>
        <Circle fx:id="circleBorder" fill="#3f51b5" radius="150.0" stroke="TRANSPARENT" strokeType="INSIDE"
                AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="35.0">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Circle>
        <VBox fx:id="textLayout" alignment="CENTER" layoutX="150.0" layoutY="150.0" maxHeight="400.0" maxWidth="400.0"
              minHeight="400.0" minWidth="400.0" prefHeight="400.0" prefWidth="400.0" spacing="15.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label fx:id="lblIntroduction" alignment="CENTER" contentDisplay="CENTER" textAlignment="CENTER"
                       textFill="WHITE"/>
            </children>
        </VBox>
        <Button fx:id="btnExitDialog" layoutX="10.0" layoutY="10.0" styleClass="dialog-button" text="%Dialog.close"
                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
    </children>
    <cursor>
        <Cursor fx:constant="HAND"/>
    </cursor>
</AnchorPane>